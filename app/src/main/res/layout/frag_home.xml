<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông báo tính cước"
        android:textSize="@dimen/fontSizeDefault"
        android:textColor="@color/textDefault"
        android:gravity="center"
        android:background="@drawable/bottom_border_default"
        android:paddingBottom="25dp"
        android:paddingTop="25dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom_border_default"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông báo tiền điện tháng 6"
            android:textSize="@dimen/fontSizeDefault"
            android:textColor="@color/textDefault"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fontSizeDefault"
            android:textColor="@color/textDefault"
            android:text="(!)"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom_border_default"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông báo tiền nước tháng 6"
            android:textSize="@dimen/fontSizeDefault"
            android:textColor="@color/textDefault"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fontSizeDefault"
            android:textColor="@color/textDefault"
            android:text="(!)"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hóa đơn gần đây"
        android:textSize="@dimen/fontSizeDefault"
        android:textColor="@color/textDefault"
        android:gravity="center"
        android:background="@drawable/bottom_border_default"
        android:paddingBottom="25dp"
        android:paddingTop="25dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom_border_default"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hóa đơn tiên điện tháng 5"
            android:textSize="@dimen/fontSizeDefault"
            android:textColor="@color/textDefault"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fontSizeDefault"
            android:textColor="@color/colorBlue"
            android:text="@string/icon_chevron_circle_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom_border_default"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hóa đơn tiền nước tháng 5"
            android:textSize="@dimen/fontSizeDefault"
            android:textColor="@color/textDefault"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fontSizeDefault"
            android:textColor="@color/colorBlue"
            android:text="@string/icon_chevron_circle_right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

</LinearLayout>