<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/phss_bg"
        android:id="@+id/phss_bg"
        />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/phss_label1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:text="@string/phss_title1"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/textDefault"
                    android:textSize="@dimen/fontSizeDefault" />

                <EditText
                    android:id="@+id/phss_edt1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/phss_label1"
                    android:background="@drawable/border_edt1"
                    android:inputType="text"
                    android:padding="5dp"
                    android:text="@string/phss_edt1"
                    android:textColor="@color/textDefault"
                    android:textSize="@dimen/fontSizeDefault" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="20dp"
                android:text="@string/phss_title2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/textDefault"
                android:textSize="@dimen/fontSizeDefault" />

            <EditText
                android:id="@+id/phss_edt2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@drawable/border_edt1"
                android:gravity="top|left"
                android:hint="@string/phss_edt2"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textAlignment="gravity"
                android:textColor="@color/textDefault"
                android:textColorHint="@color/colorGray"
                android:textSize="@dimen/fontSizeDefault"
                android:textStyle="bold" />

            <Button
                android:id="@+id/phss_btntoPhanHoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@drawable/btn_radius_blue"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="@string/phss_btntoPhanHoi"
                android:textColor="@color/colorWhite" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>

