<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/colorWhite</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <style name="InputDefault">
        <item name="android:textColor">@color/textDefault</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:padding">@dimen/paddingSizeDefault</item>
        <item name="android:textSize">@dimen/fontSizeDefault</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
